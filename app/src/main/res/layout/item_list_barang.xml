<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="horizontal"
    android:id="@+id/ll_parent"
    android:layout_marginBottom="10dp"
    android:paddingStart="@dimen/dp_16"
    android:paddingEnd="@dimen/dp_16">

    <ImageView
        android:id="@+id/iv_barang"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:padding="5dp"
        android:tint="@color/colorPrimary"
        app:srcCompat="@drawable/ic_user" />

    <RelativeLayout
        android:id="@+id/rl_parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="10dp"
        android:layout_weight="2"
        android:clickable="true"
        android:background="?selectableItemBackground"
        android:paddingEnd="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <com.rfl.trn.starr_cell.Custom.MyTextView
                android:id="@+id/tv_namaBarang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="monospace"
                android:text="@string/nama_konter"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <com.rfl.trn.starr_cell.Custom.MyTextView
                android:id="@+id/tv_hargaBarang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="monospace"
                android:text="@string/alamat_konter"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="normal" />
        </LinearLayout>

    </RelativeLayout>
    <ImageView
        android:id="@+id/iv_optionMenu"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:clickable="true"
        android:background="?selectableItemBackground"
        android:scaleType="fitXY"
        android:tint="@color/colorPrimary"
        app:srcCompat="@drawable/ic_option_menu"/>


</LinearLayout>