<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffff"
    tools:context=".Activity.AdminLaporanSemuaActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:id="@+id/cv_laporanHariIni"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_2"
                android:layout_marginBottom="@dimen/dp_2"
                android:background="?selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                app:cardElevation="@dimen/dp_4">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_16">

                    <ImageView
                        android:id="@+id/iv_icon_card"
                        android:layout_width="@dimen/dp_40"
                        android:layout_height="@dimen/dp_40"
                        android:src="@drawable/gradient_flare" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_8"
                        android:layout_toEndOf="@id/iv_icon_card"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Laporan Transaksi Hari Ini"
                            android:textSize="@dimen/sp_16"
                            android:textStyle="bold" />

                        <com.rfl.trn.starr_cell.Custom.MyTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="lihat laporan transaksi hanya hari ini"
                            android:textStyle="italic" />
                    </LinearLayout>

                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_2"
                android:layout_marginBottom="@dimen/dp_2"
                android:background="?selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                app:cardElevation="@dimen/dp_4">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_16">

                    <ImageView
                        android:id="@+id/iv_icon_card1"
                        android:layout_width="@dimen/dp_40"
                        android:layout_height="@dimen/dp_40"
                        android:src="@drawable/gradient_flare" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_8"
                        android:layout_toEndOf="@id/iv_icon_card1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Laporan Transaksi Bulan Ini"
                            android:textSize="@dimen/sp_16"
                            android:textStyle="bold" />

                        <com.rfl.trn.starr_cell.Custom.MyTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="lihat laporan transaksi Bulan ini"
                            android:textStyle="italic" />
                    </LinearLayout>

                </RelativeLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>

</LinearLayout>