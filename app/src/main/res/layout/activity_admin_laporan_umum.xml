<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.AdminLaporanUmumActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <io.supercharge.shimmerlayout.ShimmerLayout
            android:id="@+id/shimmer_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:shimmer_animation_duration="1200">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <com.rfl.trn.starr_cell.Custom.MyTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:text="Laporan Hari Ini"
                    android:textSize="@dimen/dp_20"/>
                <com.rfl.trn.starr_cell.Custom.MyTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="italic"
                    android:textSize="@dimen/dp_16"
                    android:textAlignment="center"
                    android:text="09 Juni 2019"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/dp_16"
                    android:layout_marginBottom="@dimen/dp_16">
                    <android.support.v7.widget.CardView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="50dp"
                        android:layout_marginStart="@dimen/dp_16"
                        android:layout_marginTop="@dimen/dp_8"
                        android:layout_marginEnd="@dimen/dp_16"
                        android:layout_marginBottom="@dimen/dp_8"
                        android:clickable="true"
                        android:focusable="true"
                        app:cardCornerRadius="@dimen/dp_8"
                        app:cardElevation="@dimen/dp_0">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY"
                            android:src="@drawable/gradient_scooter" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="?attr/selectableItemBackground"
                            android:clickable="true"
                            android:focusable="true"
                            android:orientation="horizontal"
                            android:padding="@dimen/dp_8">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="match_parent"
                                android:padding="@dimen/dp_8"
                                android:scaleType="fitCenter"
                                android:src="@drawable/ic_karyawan" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:paddingStart="@dimen/dp_8"
                                android:paddingEnd="@dimen/dp_8">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="4dp"
                                    android:text="@string/nama_karyawan"
                                    android:textColor="@color/white"
                                    android:textSize="20sp"
                                    android:textStyle="bold" />

                                <com.rfl.trn.starr_cell.Custom.MyTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/_12_12_2017_12_12_wib"
                                    android:drawablePadding="@dimen/dp_8"
                                    android:gravity="center_vertical"
                                    android:drawableStart="@drawable/ic_access_time_black_24dp"
                                    android:drawableTint="@color/white"
                                    android:textColor="@color/white"
                                    android:textStyle="normal"
                                    tools:targetApi="m"
                                    android:layout_marginBottom="@dimen/dp_4"/>



                            </LinearLayout>

                        </LinearLayout>


                    </android.support.v7.widget.CardView>
                    <android.support.v7.widget.CardView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="50dp"
                        android:layout_marginStart="@dimen/dp_16"
                        android:layout_marginTop="@dimen/dp_8"
                        android:layout_marginEnd="@dimen/dp_16"
                        android:layout_marginBottom="@dimen/dp_8"
                        android:clickable="true"
                        android:focusable="true"
                        app:cardCornerRadius="@dimen/dp_8"
                        app:cardElevation="@dimen/dp_0">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY"
                            android:src="@drawable/gradient_flare" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="?attr/selectableItemBackground"
                            android:clickable="true"
                            android:focusable="true"
                            android:orientation="horizontal"
                            android:padding="@dimen/dp_8">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="match_parent"
                                android:padding="@dimen/dp_8"
                                android:scaleType="fitCenter"
                                android:src="@drawable/ic_karyawan" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:paddingStart="@dimen/dp_8"
                                android:paddingEnd="@dimen/dp_8">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="4dp"
                                    android:text="@string/nama_karyawan"
                                    android:textColor="@color/white"
                                    android:textSize="20sp"
                                    android:textStyle="bold" />

                                <com.rfl.trn.starr_cell.Custom.MyTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/_12_12_2017_12_12_wib"
                                    android:drawablePadding="@dimen/dp_8"
                                    android:gravity="center_vertical"
                                    android:drawableStart="@drawable/ic_access_time_black_24dp"
                                    android:drawableTint="@color/white"
                                    android:textColor="@color/white"
                                    android:textStyle="normal"
                                    tools:targetApi="m"
                                    android:layout_marginBottom="@dimen/dp_4"/>



                            </LinearLayout>

                        </LinearLayout>


                    </android.support.v7.widget.CardView>
                    <android.support.v7.widget.CardView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="50dp"
                        android:layout_marginStart="@dimen/dp_16"
                        android:layout_marginTop="@dimen/dp_8"
                        android:layout_marginEnd="@dimen/dp_16"
                        android:layout_marginBottom="@dimen/dp_8"
                        android:clickable="true"
                        android:focusable="true"
                        app:cardCornerRadius="@dimen/dp_8"
                        app:cardElevation="@dimen/dp_0">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY"
                            android:src="@drawable/gradient_scooter" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="?attr/selectableItemBackground"
                            android:clickable="true"
                            android:focusable="true"
                            android:orientation="horizontal"
                            android:padding="@dimen/dp_8">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="match_parent"
                                android:padding="@dimen/dp_8"
                                android:scaleType="fitCenter"
                                android:src="@drawable/ic_karyawan" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:paddingStart="@dimen/dp_8"
                                android:paddingEnd="@dimen/dp_8">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="4dp"
                                    android:text="@string/nama_karyawan"
                                    android:textColor="@color/white"
                                    android:textSize="20sp"
                                    android:textStyle="bold" />

                                <com.rfl.trn.starr_cell.Custom.MyTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/_12_12_2017_12_12_wib"
                                    android:drawablePadding="@dimen/dp_8"
                                    android:gravity="center_vertical"
                                    android:drawableStart="@drawable/ic_access_time_black_24dp"
                                    android:drawableTint="@color/white"
                                    android:textColor="@color/white"
                                    android:textStyle="normal"
                                    tools:targetApi="m"
                                    android:layout_marginBottom="@dimen/dp_4"/>



                            </LinearLayout>

                        </LinearLayout>


                    </android.support.v7.widget.CardView>


                </LinearLayout>
                <com.rfl.trn.starr_cell.Custom.MyTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/dp_20"
                    android:textStyle="bold"
                    android:text="Laporan Transaksi Per Jam"
                    android:textAlignment="center"/>
                <com.rfl.trn.starr_cell.Custom.MyTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/dp_16"
                    android:textStyle="italic"
                    android:text="09 Juni 2019"
                    android:textAlignment="center"/>
                <LinearLayout
                    android:layout_marginTop="@dimen/dp_16"
                    android:layout_marginBottom="@dimen/dp_16"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:orientation="vertical">
                    \
                        <com.anychart.AnyChartView
                            android:id="@+id/cv_beratBadan"
                            android:layout_width="match_parent"
                            android:layout_height="300dp"
                            android:layout_alignParentTop="true"
                            android:background="@color/colorPrimary">
                            <ProgressBar
                                android:id="@+id/progress_bar2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                />
                        </com.anychart.AnyChartView>

                </LinearLayout>
                <com.rfl.trn.starr_cell.Custom.MyTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/dp_20"
                    android:textStyle="bold"
                    android:text="Perhitungan Sisa Modal"
                    android:textAlignment="center"/>
                <com.rfl.trn.starr_cell.Custom.MyTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/dp_16"
                    android:textStyle="italic"
                    android:text="sisa modal dari total(struk x harga beli)"
                    android:textAlignment="center"/>

                <android.support.v7.widget.CardView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="50dp"
                    android:layout_marginStart="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_8"
                    android:layout_marginEnd="@dimen/dp_16"
                    android:layout_marginBottom="@dimen/dp_8"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardCornerRadius="@dimen/dp_8"
                    app:cardElevation="@dimen/dp_0">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:src="@drawable/gradient_scooter" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:orientation="horizontal"
                        android:padding="@dimen/dp_8">



                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:paddingStart="@dimen/dp_8"
                            android:paddingEnd="@dimen/dp_8">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="4dp"
                                android:text="Rp 200000"
                                android:textColor="@color/white"
                                android:textSize="20sp"
                                android:textAlignment="center"
                                android:textStyle="bold" />

                            <com.rfl.trn.starr_cell.Custom.MyTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" Rp 200000"
                                android:drawablePadding="@dimen/dp_8"
                                android:gravity="center_vertical"
                                android:drawableTint="@color/white"
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                android:textStyle="normal"
                                tools:targetApi="m"
                                android:layout_marginBottom="@dimen/dp_4"/>



                        </LinearLayout>

                    </LinearLayout>


                </android.support.v7.widget.CardView>
            </LinearLayout>


        </io.supercharge.shimmerlayout.ShimmerLayout>
    </ScrollView>

</LinearLayout>