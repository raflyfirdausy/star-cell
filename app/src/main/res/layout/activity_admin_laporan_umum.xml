<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.AdminLaporanUmumActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <io.supercharge.shimmerlayout.ShimmerLayout
            android:id="@+id/shimmer_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:shimmer_animation_duration="1200">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_20"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_20"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Laporan Hari Ini"
                        android:textAlignment="center"
                        android:textSize="@dimen/dp_16"
                        android:textStyle="bold" />

                    <com.rfl.trn.starr_cell.Custom.MyTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="09 Juni 2019"
                        android:textAlignment="center"
                        android:textStyle="italic" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_16"
                    android:layout_marginBottom="@dimen/dp_16"
                    android:orientation="vertical">

                    <android.support.v7.widget.CardView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_16"
                        android:layout_marginTop="@dimen/dp_8"
                        android:layout_marginEnd="@dimen/dp_16"
                        android:layout_marginBottom="@dimen/dp_8"
                        android:clickable="true"
                        android:focusable="true"
                        android:minHeight="50dp"
                        app:cardCornerRadius="@dimen/dp_8"
                        app:cardElevation="@dimen/dp_0">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY"
                            android:src="@drawable/gradient_scooter" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="?attr/selectableItemBackground"
                            android:clickable="true"
                            android:focusable="true"
                            android:orientation="horizontal"
                            android:padding="@dimen/dp_8">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="match_parent"
                                android:padding="@dimen/dp_8"
                                android:scaleType="fitCenter"
                                android:src="@drawable/ic_karyawan" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:paddingStart="@dimen/dp_8"
                                android:paddingEnd="@dimen/dp_8">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="4dp"
                                    android:text="200"
                                    android:textColor="@color/white"
                                    android:textSize="20sp"
                                    android:textStyle="bold" />

                                <com.rfl.trn.starr_cell.Custom.MyTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="@dimen/dp_4"
                                    android:drawableStart="@drawable/ic_access_time_black_24dp"
                                    android:drawablePadding="@dimen/dp_8"
                                    android:drawableTint="@color/white"
                                    android:gravity="center_vertical"
                                    android:text="Jumlah transaksi"
                                    android:textColor="@color/white"
                                    android:textStyle="normal"
                                    tools:targetApi="m" />


                            </LinearLayout>

                        </LinearLayout>


                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_16"
                        android:layout_marginTop="@dimen/dp_8"
                        android:layout_marginEnd="@dimen/dp_16"
                        android:layout_marginBottom="@dimen/dp_8"
                        android:clickable="true"
                        android:focusable="true"
                        android:minHeight="50dp"
                        app:cardCornerRadius="@dimen/dp_8"
                        app:cardElevation="@dimen/dp_0">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY"
                            android:src="@drawable/gradient_flare" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="?attr/selectableItemBackground"
                            android:clickable="true"
                            android:focusable="true"
                            android:orientation="horizontal"
                            android:padding="@dimen/dp_8">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="match_parent"
                                android:padding="@dimen/dp_8"
                                android:scaleType="fitCenter"
                                android:src="@drawable/ic_karyawan" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:paddingStart="@dimen/dp_8"
                                android:paddingEnd="@dimen/dp_8">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="4dp"
                                    android:text="Rp -2536253"
                                    android:textColor="@color/white"
                                    android:textSize="20sp"
                                    android:textStyle="bold" />

                                <com.rfl.trn.starr_cell.Custom.MyTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="@dimen/dp_4"
                                    android:drawableStart="@drawable/ic_access_time_black_24dp"
                                    android:drawablePadding="@dimen/dp_8"
                                    android:drawableTint="@color/white"
                                    android:gravity="center_vertical"
                                    android:text="Keuntungan"
                                    android:textColor="@color/white"
                                    android:textStyle="normal"
                                    tools:targetApi="m" />


                            </LinearLayout>

                        </LinearLayout>


                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_16"
                        android:layout_marginTop="@dimen/dp_8"
                        android:layout_marginEnd="@dimen/dp_16"
                        android:layout_marginBottom="@dimen/dp_8"
                        android:clickable="true"
                        android:focusable="true"
                        android:minHeight="50dp"
                        app:cardCornerRadius="@dimen/dp_8"
                        app:cardElevation="@dimen/dp_0">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY"
                            android:src="@drawable/gradient_scooter" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="?attr/selectableItemBackground"
                            android:clickable="true"
                            android:focusable="true"
                            android:orientation="horizontal"
                            android:padding="@dimen/dp_8">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="match_parent"
                                android:padding="@dimen/dp_8"
                                android:scaleType="fitCenter"
                                android:src="@drawable/ic_karyawan" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:paddingStart="@dimen/dp_8"
                                android:paddingEnd="@dimen/dp_8">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="4dp"
                                    android:text="Rp 3243545"
                                    android:textColor="@color/white"
                                    android:textSize="20sp"
                                    android:textStyle="bold" />

                                <com.rfl.trn.starr_cell.Custom.MyTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="@dimen/dp_4"
                                    android:drawableStart="@drawable/ic_access_time_black_24dp"
                                    android:drawablePadding="@dimen/dp_8"
                                    android:drawableTint="@color/white"
                                    android:gravity="center_vertical"
                                    android:text="Pendapatan"
                                    android:textColor="@color/white"
                                    android:textStyle="normal"
                                    tools:targetApi="m" />


                            </LinearLayout>

                        </LinearLayout>


                    </android.support.v7.widget.CardView>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_20"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Laporan Transaksi Per Jam"
                        android:textAlignment="center"
                        android:textSize="@dimen/dp_16"
                        android:textStyle="bold" />

                    <com.rfl.trn.starr_cell.Custom.MyTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="09 Juni 2019"
                        android:textAlignment="center"
                        android:textStyle="italic" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_marginStart="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_16"
                    android:layout_marginEnd="@dimen/dp_16"
                    android:layout_marginBottom="@dimen/dp_16"
                    android:orientation="vertical">

                    <com.anychart.AnyChartView
                        android:id="@+id/cv_beratBadan"
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:layout_alignParentTop="true"
                        android:background="@color/colorPrimary"></com.anychart.AnyChartView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_20"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Perhitungan Sisa Modal"
                        android:textAlignment="center"
                        android:textSize="@dimen/dp_16"
                        android:textStyle="bold" />

                    <com.rfl.trn.starr_cell.Custom.MyTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="sisa modal dari total(struk x harga beli)"
                        android:textAlignment="center"
                        android:textStyle="italic" />
                </LinearLayout>


                <android.support.v7.widget.CardView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_8"
                    android:layout_marginEnd="@dimen/dp_16"
                    android:layout_marginBottom="@dimen/dp_8"
                    android:clickable="true"
                    android:focusable="true"
                    android:minHeight="50dp"
                    app:cardCornerRadius="@dimen/dp_8"
                    app:cardElevation="@dimen/dp_0">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:src="@drawable/gradient_scooter" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:orientation="horizontal"
                        android:padding="@dimen/dp_8">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:paddingStart="@dimen/dp_8"
                            android:paddingEnd="@dimen/dp_8">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="4dp"
                                android:text="Rp 200000"
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                android:textSize="20sp"
                                android:textStyle="bold" />

                            <com.rfl.trn.starr_cell.Custom.MyTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/dp_4"
                                android:drawablePadding="@dimen/dp_8"
                                android:drawableTint="@color/white"
                                android:gravity="center_vertical"
                                android:text=" Rp 200000"
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                android:textStyle="normal"
                                tools:targetApi="m" />
                        </LinearLayout>

                    </LinearLayout>


                </android.support.v7.widget.CardView>
            </LinearLayout>
        </io.supercharge.shimmerlayout.ShimmerLayout>
    </ScrollView>

</LinearLayout>