<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffff"
    android:orientation="vertical"
    android:paddingStart="25dp"
    android:paddingEnd="25dp"
    tools:context=".Activity.DetailKaryawanActivity">

            <ProgressBar
                android:id="@+id/progres_Karyawan"
                android:layout_width="70dp"
                android:layout_gravity="center"
                android:layout_height="70dp"/>

            <LinearLayout
                android:id="@+id/ll_detail_failed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:layout_marginTop="100dp"
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:src="@drawable/bg_failed_fetch_data"/>
                <com.rfl.trn.starr_cell.Custom.MyTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="Gagal mengambil data atau tidak ada interner \n Swipe untuk mencoba lagi"/>
                <Button
                    android:id="@+id/btn_reload"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="Coba Lagi"
                    android:layout_gravity="center"/>
            </LinearLayout>
        <ScrollView
            android:id="@+id/sv_detailKaryawan"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_detailKaryawan"
                    android:layout_width="250dp"
                    android:layout_height="250dp"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:src="@drawable/bg_take_pict" />

                <com.rfl.trn.starr_cell.Custom.MyTextView
                    android:id="@+id/mytv_detailNamaKaryawan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nama Karyawan"
                    android:textAlignment="center"
                    android:textSize="26sp"
                    android:textStyle="bold" />

                <com.rfl.trn.starr_cell.Custom.MyTextView
                    android:id="@+id/mytv_detailStatusKaryawan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Aktif"
                    android:textAlignment="center"
                    android:textColor="#2196F3"
                    android:textSize="18sp" />
                <com.rfl.trn.starr_cell.Custom.MyTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Laki-Laki"
                    android:textAlignment="center"
                    android:layout_marginTop="10dp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="20dp"/>
                <com.rfl.trn.starr_cell.Custom.MyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Alamat"
                    android:textSize="18sp" />

                <com.rfl.trn.starr_cell.Custom.MyTextView
                    android:id="@+id/mytv_detailAlamatKaryawan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Perum.Bumi Tanjung Elok no 118"
                    android:textSize="20sp"
                    android:textStyle="bold" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"/>
                <com.rfl.trn.starr_cell.Custom.MyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No Hp"
                    android:textSize="18sp" />

                <com.rfl.trn.starr_cell.Custom.MyTextView
                    android:id="@+id/mytv_detailNoHpKaryawan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="08579999"
                    android:textSize="20sp"
                    android:textStyle="bold" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"/>
                <com.rfl.trn.starr_cell.Custom.MyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tanggal Ditambahkan"
                    android:textSize="18sp" />

                <com.rfl.trn.starr_cell.Custom.MyTextView
                    android:id="@+id/mytv_detailTanggalKaryawan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="12/04/2000"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </ScrollView>



</LinearLayout>