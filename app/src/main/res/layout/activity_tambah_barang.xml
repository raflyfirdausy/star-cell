<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.TambahBarangActivity">

    <LinearLayout
        android:id="@+id/ll_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_karyawan"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:padding="20dp"
            android:tint="@color/colorPrimary"
            app:srcCompat="@drawable/ic_store" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="vertical"
                android:padding="10dp">

                <com.rfl.trn.starr_cell.Custom.MyTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="monospace"
                    android:text="Tambah Barang"
                    android:textColor="@color/colorPrimary"
                    android:textSize="23sp"
                    android:textStyle="bold" />

                <com.rfl.trn.starr_cell.Custom.MyTextView
                    android:id="@+id/tv_detailKaryawan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="monospace"
                    android:paddingTop="5dp"
                    android:text="@string/detail_tambah_konter"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:textStyle="normal" />

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:paddingBottom="20dp">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:theme="@style/daftar">

                    <com.rfl.trn.starr_cell.Custom.MyEditText
                        android:id="@+id/myet_namaBarang"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_nama_barang"
                        android:drawablePadding="15dp"
                        android:drawableTint="@color/colorPrimaryDark"
                        android:hint="Nama Barang"
                        android:inputType="text"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:textColorHint="@color/colorPrimaryDark"
                        tools:targetApi="m" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_kategori"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:theme="@style/daftar">

                    <com.rfl.trn.starr_cell.Custom.MyEditText
                        android:id="@+id/myet_kategori"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_kategori"
                        android:drawablePadding="15dp"
                        android:drawableTint="@color/colorPrimaryDark"
                        android:focusable="false"
                        android:hint="Kategori Barang"
                        android:inputType="text"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:textColorHint="@color/colorPrimaryDark"
                        tools:targetApi="m" />


                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_konter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:theme="@style/daftar">

                    <com.rfl.trn.starr_cell.Custom.MyEditText
                        android:id="@+id/myet_konter"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_store"
                        android:drawablePadding="15dp"
                        android:drawableTint="@color/colorPrimaryDark"
                        android:focusable="false"
                        android:hint="Pilih Konter"
                        android:inputType="text"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:textColorHint="@color/colorPrimaryDark"
                        tools:targetApi="m" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:theme="@style/daftar">

                    <com.rfl.trn.starr_cell.Custom.MyEditText
                        android:id="@+id/myet_stokBarang"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_stock"
                        android:drawablePadding="15dp"
                        android:drawableTint="@color/colorPrimaryDark"
                        android:hint="Stok Barang"
                        android:inputType="numberDecimal"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:textColorHint="@color/colorPrimaryDark"
                        tools:targetApi="m" />


                </android.support.design.widget.TextInputLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:theme="@style/daftar"
                        android:layout_weight="1">

                        <com.wajahatkarim3.easymoneywidgets.EasyMoneyEditText
                            android:id="@+id/myet_harga1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableStart="@drawable/ic_price_tag"
                            android:drawablePadding="15dp"
                            android:drawableTint="@color/colorPrimaryDark"
                            android:hint="Harga 1"
                            android:inputType="numberDecimal"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:textColor="@color/colorPrimaryDark"
                            android:textColorHint="@color/colorPrimaryDark"
                            app:currency_symbol="Rp"
                            app:show_commas="false"
                            app:show_currency="true"
                            tools:targetApi="m" />

                    </android.support.design.widget.TextInputLayout>
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:theme="@style/daftar"
                        android:layout_weight="1">

                        <com.wajahatkarim3.easymoneywidgets.EasyMoneyEditText
                            android:id="@+id/myet_harga2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableStart="@drawable/ic_price_tag"
                            android:drawablePadding="15dp"
                            android:drawableTint="@color/colorPrimaryDark"
                            android:hint="harga 2(Opsional)"
                            android:inputType="number"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:textColor="@color/colorPrimaryDark"
                            android:textColorHint="@color/colorPrimaryDark"
                            app:currency_symbol="Rp"
                            app:show_commas="false"
                            app:show_currency="true"
                            tools:targetApi="m" />

                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:theme="@style/daftar"
                        android:layout_weight="1">

                        <com.wajahatkarim3.easymoneywidgets.EasyMoneyEditText
                            android:id="@+id/myet_harga3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableStart="@drawable/ic_price_tag"
                            android:drawablePadding="15dp"
                            android:drawableTint="@color/colorPrimaryDark"
                            android:hint="harga 3(Opsional)"
                            android:inputType="number"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:textColor="@color/colorPrimaryDark"
                            android:textColorHint="@color/colorPrimaryDark"
                            app:currency_symbol="Rp"
                            app:show_commas="false"
                            app:show_currency="true"
                            tools:targetApi="m" />

                    </android.support.design.widget.TextInputLayout>
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:theme="@style/daftar"
                        android:layout_weight="1">

                        <com.wajahatkarim3.easymoneywidgets.EasyMoneyEditText
                            android:id="@+id/myet_hargaJual"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableStart="@drawable/ic_price_tag"
                            android:drawablePadding="15dp"
                            android:drawableTint="@color/colorPrimaryDark"
                            android:hint="Harga Jual"
                            android:inputType="number"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:textColor="@color/colorPrimaryDark"
                            android:textColorHint="@color/colorPrimaryDark"
                            app:currency_symbol="Rp"
                            app:show_commas="false"
                            app:show_currency="true"
                            tools:targetApi="m" />

                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>


                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:theme="@style/daftar">

                    <com.wajahatkarim3.easymoneywidgets.EasyMoneyEditText
                        android:id="@+id/myet_hargaBeli"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_price_tag"
                        android:drawablePadding="15dp"
                        android:drawableTint="@color/colorPrimaryDark"
                        android:hint="Harga Beli"
                        android:inputType="number"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:textColorHint="@color/colorPrimaryDark"
                        app:currency_symbol="Rp"
                        app:show_commas="false"
                        app:show_currency="true"
                        tools:targetApi="m" />

                </android.support.design.widget.TextInputLayout>

                <com.rfl.trn.starr_cell.Custom.MyTextView
                    android:id="@+id/btn_tambahBarang"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/rect1"
                    android:backgroundTint="@color/colorPrimaryDark"
                    android:elevation="3dp"
                    android:fontFamily="monospace"
                    android:gravity="center"
                    android:padding="12dp"
                    android:text="Tambahkan"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>